  <!-- Styles -->
  <style name="WhistleTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
    <item name="android:windowActionBar">true</item>
    <item name="android:actionBarStyle" tools:ignore="NewApi">@style/XamActionBarStyle</item>
    <item name="actionBarStyle">@style/XamActionBarStyle</item>
    <!--<item name="android:windowBackground">@color/main_background</item>-->
  </style>

  <style name="ratingBar" parent="@android:style/Widget.RatingBar">
    <item name="android:progressDrawable">@drawable/custom_ratingbar_selector</item>
    <item name="android:minHeight">33dp</item>
    <item name="android:maxHeight">33dp</item>
  </style>
  
  <style name="XamActionBarTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:windowNoTitle">true</item>
    <!--<item name="android:actionBarStyle">@style/XamActionBarStyle</item>-->
    <!--<item name="android:windowBackground">@color/main_background</item>-->
  </style>

  <style name="XamActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="android:titleTextStyle" tools:ignore="NewApi">@style/XamActionBarTitleStyle</item>
    <item name="titleTextStyle">@style/XamActionBarTitleStyle</item>
    <item name="android:background"  tools:ignore="NewApi">@color/app_green_color</item>
    <item name="background">@color/app_green_color</item>
    <item name="android:backgroundStacked">@color/app_green_color</item>
    <item name="android:logo">@drawable/menu_white_icon</item>
    <item name="logo">@drawable/menu_white_icon</item>
  </style>
  <!--https://github.com/socialize/android-appcompat/blob/master/res/values/styles.xml-->
  <style name="XamActionBarTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:gravity">center_horizontal</item>
  </style>

  <style name="Animation">
    <item name="android:windowEnterAnimation">@anim/popup_show</item>
    <item name="android:windowExitAnimation">@anim/popup_hide</item>
  </style>


  <style name="LandingActionBarStyle" parent="@style/XamActionBarStyle">
    <!--<item name="android:titleTextStyle">@style/XamActionBarTitleStyle</item>-->
    <item name="android:logo" tools:ignore="NewApi">@drawable/back_arrow_white_icon</item>
    <item name="logo">@drawable/back_arrow_white_icon</item>
  </style>

  <style name="LandingViewTheme" parent="@style/WhistleTheme">
    <item name="android:actionBarStyle" tools:ignore="NewApi">@style/LandingActionBarStyle</item>
    <item name="actionBarStyle">@style/LandingActionBarStyle</item>
  </style>
  <style name="MainViewTheme" parent="@style/WhistleTheme">
  </style>


